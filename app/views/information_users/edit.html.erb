<% provide :title, t(".edit_user") %>
<div class="col-md-3"></div>
<div class="col-md-6">
  <br>
  <h1><%= t ".update_your_profile" %></h1>
  <br>
  <%= form_for @info do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <% if @info.image.attached? %>
      <%= image_tag @info.image.variant(resize: Settings.image_size) %><br>
    <% end %>
    <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png" %>
    <%= label_tag :first_name %>
    <%= f.text_field :first_name, class: "form-control" %>
    <%= label_tag :last_name %>
    <%= f.text_field :last_name, class: "form-control" %>
    <%= label_tag :address %>
    <%= f.text_field :address, class: "form-control" %>
    <%= label_tag :gender %>
    <%= f.select :gender_id, options_for_select(show_gender,
      {selected: @info.gender_id}) %>
    <%= label_tag :birthday %>
    <%= f.date_field :birthday, min: (I18n.localize 80.year.ago, format: :birthday_format),
      max: (I18n.localize Time.now, format: :birthday_format) %>
    <%= label_tag :height %>
    <%= f.text_field :height, class: "form-control" %>
    <%= label_tag :weight %>
    <%= f.text_field :weight, class: "form-control" %>
    <%= label_tag :education %>
    <%= f.select :education, options_for_select(show_education,
      {selected: @info.education}) %>
    <%= label_tag :relationship %>
    <%= f.select :relationship, options_for_select(show_relationship,
      {selected: @info.relationship}) %>
    <%= label_tag :children %>
    <%= f.select :children, options_for_select(show_children,
      {selected: @info.children}) %>
    <%= label_tag :religion %>
    <%= f.text_field :religion, class: "form-control" %>
    <%= label_tag :description %>
    <%= f.text_field :description, class: "form-control" %>
    <%= f.submit t(".save_changes"), class: "btn btn-primary" %>
    <% end %>
</div>
<div class="col-md-3"></div>
