<%= search_form_for @q, url: {action: :home, controller: :static_pages} do |f| %>
  <%= f.label :address %>
  <%= f.search_field :description_or_address_cont %>
  <%= label_tag :religion %>
  <%= f.search_field :religion %>
  <%= label_tag :gender %>
  <%= f.select :gender_id_eq, options_for_select(show_gender, @q.gender_id_eq), {include_blank: t(".gender")} %>
  <%= label_tag :education %>
  <%= f.select :education_eq,
    options_for_select(show_education, @q.education_eq), {include_blank: t(".education")} %>
  <%= label_tag :relationship %>
  <%= f.select :relationship_eq,
    options_for_select(show_relationship, @q.relationship_eq), {include_blank: t(".relationship")} %>
  <%= label_tag :children %>
  <%= f.select :children_eq,
    options_for_select(show_children, @q.children), {include_blank: t(".children")} %>
  <%= label_tag :age %>
  <br>
  <%= f.label :from %>
  <%= f.text_field :birthday_gteq %>

  <%= f.label :to %>
  <%= f.text_field :birthday_lteq %>
  <%= f.submit t(".seacrh_btn"), class: "btn btn-success" %>
<% end %>
