<% provide :title, t(".genders") %>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= link_to t(".create"), new_admin_gender_path, class: "btn btn-success" %>
        <table width="100%" class="table table-bordered table-hover" id="datatable">
          <thead>
            <tr>
              <th><%= t ".stt" %></th>
              <th><%= t ".name" %></th>
              <th><%= t ".created_at" %></th>
              <th colspan="2"><%= t ".action" %></th>
            </tr>
          </thead>
          <tbody>
            <% @genders.each_with_index do |gender,index| %>
            <tr>
              <td><%= create_index params[:page], index, Settings.per_page %></td>
              <td><%= gender.name %></td>
              <td><%= I18n.localize gender.created_at, format: :created_at %></td>
              <td>
                <%= link_to t(".edit"), edit_admin_gender_path(gender.id),
                  class: "btn btn-warning" %>
              </td>
              <td>
                <%= link_to t(".delete"), admin_gender_path(gender.id),
                method: :delete, data: {confirm: t(".confirm")}, class: "btn btn-danger" %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @genders %>
      </div>
    </div>
  </div>
</div>
